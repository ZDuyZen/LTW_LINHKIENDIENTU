@model IEnumerable<QuanLyThietBi.Models.SANPHAM>

@{
    ViewBag.Title = "QL_SanPham";
    Layout = "~/Views/LayoutQuanLy.cshtml";
}

<div class="container">

    <div class="row">
        @Html.ActionLink("Thêm sản phẩm", "Them_SP")
    </div>
    <div class="row">
        @Html.ActionLink("Trở về trang chủ", "Index_QL")
    </div>
    <div class="row">

        <table class="table">
            <tr class="text-center">
                <th>
                    Mã sản phẩm
                </th>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Hình sản phẩm
                </th>
                <th>
                    Giá bán
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Mã loại sản phẩm
                </th>
                <th>
                    Mã nước xuất khẩu
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MASP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TENSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MOTA)
                    </td>
                    <td>
                        <img style="width:50px; height:50px" src="~/HinhAnhSP/@item.HINHSANPHAM" />
                    </td>
                    <td>
                        @Convert.ToDecimal(item.GIABAN).ToString("0,0")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SOLUONG)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MALSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MANXX)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Sua_SP", new { id = item.MASP }) |
                        @Html.ActionLink("Xóa", "Xoa_SP", new { id = item.MASP })
                    </td>
                </tr>
            }

        </table>
    </div>

</div>