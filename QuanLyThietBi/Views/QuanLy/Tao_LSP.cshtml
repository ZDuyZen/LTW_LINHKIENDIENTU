@model QuanLyThietBi.Models.LOAISP

@{
    ViewBag.Title = "Tao_LSP";
    Layout = "~/Views/LayoutQuanLy.cshtml";
}


<div class="container">
    <div class="row">
        <h2>Thêm loại sản phẩm</h2>
    </div>

    <div class="row">
        @Html.ActionLink("Trở về trang chủ", "Index_QL")
    </div>

    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <div class="editor-label">
                    Mã loại sản phẩm
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.MALSP)
                    @Html.ValidationMessageFor(model => model.MALSP)
                </div>

                <div class="editor-label">
                    Tên loại sản phẩm
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.TENLSP)
                    @Html.ValidationMessageFor(model => model.TENLSP)
                </div>

                <div class="editor-label">
                   Mã loại thiết bị
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.MALH)
                    @Html.ValidationMessageFor(model => model.MALH)
                </div>

                <p>
                    <input type="submit" value="Thêm loại sản phẩm" />
                </p>
            </fieldset>
        }
    </div>

</div>



