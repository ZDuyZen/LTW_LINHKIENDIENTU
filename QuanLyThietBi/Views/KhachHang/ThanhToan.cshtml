@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/LayoutKhachHang.cshtml";
}

@using QuanLyThietBi.Models
@model List<CHITIETDONHANG>

<h2>Trang thanh toán</h2>
@{
    int thanhtien = 0;
    int tongtien = 0;
}


<table class="table">
    <tr>
        <th>Mã đơn hàng</th>
        <th>Mã sản phẩm</th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
    </tr>

    @{
        if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MADH</td>
                    <td>@item.MASP</td>
                    <td>
                        @item.SOLUONG
                    </td>
                    <td>
                        @{
                            thanhtien += Convert.ToInt32(item.DONGIA);
                        }
                        @Convert.ToDecimal(thanhtien).ToString("0,0") VND
                    </td>


                </tr>
            }
        }
    }
    <tr>
        <td colspan="4">
            Tổng tiền
            @{

                <span style="color: red"> @Convert.ToDecimal(thanhtien).ToString("0,0") VND </span>
            }
        </td>
    </tr>

</table>