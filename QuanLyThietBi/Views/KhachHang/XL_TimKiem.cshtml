@{
    ViewBag.Title = "XL_TimKiem";
    Layout = "~/Views/LayoutKhachHang.cshtml";
}

@using QuanLyThietBi.Models
@model List<SANPHAM>
<h2>Kết quả tìm kiếm @ViewBag.tt</h2>
<table class="table" cellspacing="0" border="1">
    <tr>
        <td>Mã sản phẩm</td>
        <td>Tên sản phẩm</td>
        <td>Hình sản phẩm</td>
        <td>Giá Bán</td>
        <td>Số lượng tồn</td>

    </tr>

    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.MASP</td>
                <td>@item.TENSP</td>
                <td>
                    <img src="~/HinhAnhSP/@item.HINHSANPHAM" width="242" height="200"></img>
                </td>
                <td>@item.GIABAN</td>
                <td>@item.SOLUONG</td>
                <td>
                    <a href="/KhachHang/XemChiTiet/@item.MASP">Xem chi tiết</a><br />
                </td>
            </tr>
        }
    }
</table>
